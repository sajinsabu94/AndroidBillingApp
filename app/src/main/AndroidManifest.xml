<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xeta.org.billingapp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".ItemAddActivity">
        </activity>
        <activity android:name=".CartActivity">
        </activity>
         <activity android:name=".ScanActivity">
        </activity>
         <activity android:name=".ItemAddSpecialActivity">
        </activity>
        <activity android:name=".ScanSpecialActivity">
        </activity>
        <activity android:name=".ProceedBillActivity">
        </activity>
        <activity android:name=".BillInfoActivity">
        </activity>
        <activity android:name=".DailyActivity">
        </activity>
        <activity android:name=".MonthlyActivity">
        </activity>
        <activity android:name=".ResetPassActivity">
        </activity>
        <activity android:name=".BackupActivity">
        </activity>
        <activity android:name=".ChooseActivity">
        </activity>
        <activity android:name=".ScanSpecialWholeActivity">
        </activity>
        <activity android:name=".ScanWholeActivity">
        </activity>
        <activity android:name=".ListBillActivity">
        </activity>
        <activity android:name=".DeviceListActivity">
        </activity>
        <activity android:name=".OldBillInfoActivity">
        </activity>
        <activity android:name=".PrintSearchBillActivity">
        </activity>
    </application>

</manifest>