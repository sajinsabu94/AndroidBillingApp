<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/chooseWholesale"
        android:onClick="chooseWholesale"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/wholesale"
        android:text="Wholesale"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/chooseRetail"
        android:onClick="chooseRetail"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/retail"
        android:text="Retail"/>

</LinearLayout>