<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
        <Button
            android:id="@+id/genBillBtn"
            android:drawableTop="@drawable/cart_add"
            android:onClick="genBillActivity"
            android:text="Generate Bill"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

            <Button
                android:id="@+id/addItemBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/add_item"
                android:onClick="addItemActivity"
                android:text="Add Item" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/dailyReportBtn"
            android:drawableTop="@drawable/calendar"
            android:onClick="dispDailyReport"
            android:text="Daily Report"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/monthlyReportBtn"
            android:drawableTop="@drawable/monthly"
            android:onClick="dispMonthlyReport"
            android:text="Monthly Report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/changePassbtn"
            android:drawableTop="@drawable/pass"
            android:text="Change Password"
            android:onClick="doResetPass"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/addSpecialItemDBBtn"
            android:drawableTop="@drawable/additional"
            android:onClick="addSpecialItemDBAction"
            android:text="Add Special Item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/button2"
            android:drawableTop="@drawable/bill"
            android:text="Check Bill"
            android:onClick="checkBillActivity"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button3"
            android:drawableTop="@drawable/view_item"
            android:text="Backup/Restore"
            android:onClick="backup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
    </LinearLayout>